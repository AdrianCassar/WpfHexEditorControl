<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFHexaEditor.Control">
    <Style TargetType="{x:Type local:HexByteControl}">
        <Setter Property="Width" Value="25"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HexByteControl}">
                    <Canvas Background="{TemplateBinding Background}" >
                        
                        <TextBlock x:Name="FirstHexChar" 
                                   Padding="0"
                                   Width="9"
                                   HorizontalAlignment="Left"
                                   TextAlignment="Right"
                                   Focusable="True" 
                                   Margin="0,0,16,0"
                                   />
                        
                        <TextBlock x:Name="SecondHexChar" 
                                   Padding="0" 
                                   Margin="9,0,0,0" 
                                   Focusable="True"
                                   />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
