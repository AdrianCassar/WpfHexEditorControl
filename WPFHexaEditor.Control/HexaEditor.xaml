<UserControl x:Class="WPFHexaEditor.Control.HexaEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFHexaEditor.Control"
             mc:Ignorable="d" BorderBrush="#FF443E3E" BorderThickness="1"
             Height="350" Width="800">
    
    <Grid SizeChanged="Grid_SizeChanged" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="287*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="LinesInfoStackPanel" HorizontalAlignment="Left"
                      Grid.Row="1" Margin="2,0,0,0"/>

        <!--<ScrollViewer Grid.Row="1" Grid.Column="2" Margin="0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="HexDataStackPanel" />
        </ScrollViewer>-->

        <StackPanel x:Name="HexDataStackPanel" Grid.Row="1" Grid.Column="1" Margin="10,0"/>

        <ScrollBar x:Name="VerticalScrollBar" HorizontalAlignment="Right" Width="20"
                   ValueChanged="VerticalScrollBar_ValueChanged" 
                   SmallChange="1" LargeChange="100" Grid.Column="4" Grid.Row="0" Grid.RowSpan="2"/>
        <StackPanel x:Name="HexHeaderStackPanel" Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Margin="10,0"/>
        <StackPanel x:Name="StringDataStackPanel" Grid.Row="1" Grid.Column="2" Margin="10,0,0,0"/>

        <Grid x:Name="StatusBarGrid" Grid.Row="3" Grid.ColumnSpan="4" Height="30" Visibility="Collapsed" >
            
        </Grid>
    </Grid>
</UserControl>
