<UserControl
    x:Class="WpfHexEditor.Sample.BinaryFilesDifference.BlockListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfHexEditor.Sample.BinaryFilesDifference"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="26"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">

        <Border
            Width="16"
            Height="16"
            Margin="5,0,5,0"
            BorderBrush="Black"
            BorderThickness="1">
            <Label Background="{Binding Color}" />
        </Border>

        <Label Content="0x" FontWeight="Bold" />
        <Label Width="75" Content="{Binding StartOffset, UpdateSourceTrigger=PropertyChanged}" />

        <Label Content="Length" FontWeight="Bold" />
        <Label
            Width="40"
            HorizontalContentAlignment="Right"
            Content="{Binding Length, UpdateSourceTrigger=PropertyChanged}" />
        <Label Content="bytes" />

    </StackPanel>
</UserControl>
