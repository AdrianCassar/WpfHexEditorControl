<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHexaEditorExample"
        xmlns:Control="clr-namespace:WPFHexaEditor.Control;assembly=WPFHexaEditor.Control" x:Class="WPFHexaEditorExample.MainWindow"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Background="WhiteSmoke"
        Title="TestWindow - WPF HexaEditor Control (Alpha)" Height="418" Width="772">
    <Grid >
        <Control:HexaEditor x:Name="HexEdit" Margin="10,70,10,10" Height="Auto" Width="Auto"/>
        <Button x:Name="SetPositionButton" Content="Set Position" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="127" Click="SetPositionButton_Click"/>
        <Button x:Name="button" Content="Test : BytePerLine=26" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="127" Click="button_Click"/>
        <Button x:Name="OpenFileButton" Content="Open" HorizontalAlignment="Left" Margin="157,10,0,0" VerticalAlignment="Top" Width="75" Click="OpenFileButton_Click"/>
        <Button x:Name="CloseFileButton" Content="CloseFile" HorizontalAlignment="Left" Margin="237,10,0,0" VerticalAlignment="Top" Width="75" Click="CloseFileButton_Click"/>
        <Button x:Name="ReadOnlybutton" Content="ReadOnly" HorizontalAlignment="Left" Margin="157,35,0,0" VerticalAlignment="Top" Width="75" Click="ReadOnlybutton_Click"/>
    </Grid>
</Window>
